<div class="tab-4 resp-tab-content" aria-labelledby="tab_item-4">
    <div class="agile_about">
        <div class="agile_about_pos">
            <img src="~/Content/images/1.png" alt=" " class="img-responsive" />
        </div>
    </div>
    <div class="agileits_agile_about">
        <h3>Blog</h3>

        @if (articles.Count > 0)
        {
            foreach (Article item in articles)
            {
                <div class="agileits_agile_about_blog" style="margin-top:32px;">
                    <div class="col-md-6 agileits_agile_about_blog_left">
                        <div class="agile_about_blog_left_grid">
                            <a href="#" ><img src="~/Content/images/8.jpg" alt=" " class="img-responsive" /></a>
                            <div class="agile_about_blog_left_grid_pos">
                                <ul>
                                    <li>@item.AddedDate.Value.Day</li>
                                    <li>@item.AddedDate.Value.ToString("MMMM") , @item.AddedDate.Value.Year</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 agileits_agile_about_blog_right">
                        <div class="agile_about_blog_right_grid">
                            <div class="agile_model">
                                <a href="#">@item.Header</a>
                            </div>
                            <div class="agile_about_blog_right_grid_list">
                                <ul>
                                    <li><span class="glyphicon glyphicon-user" aria-hidden="true"></span><a href="#">@item.User.NameSurname</a></li>
                                    <li style="margin-right:10px"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span><a href="#">@item.Comments.Count Comments</a></li>
                                    <li><span class="glyphicon glyphicon-edit"></span><a href="#">@item.Category.Name</a></li>
                                </ul>
                            </div>
                            <p>@Kisalt(item.Content)</p>
                        </div>
                    </div>
                    <div class="clearfix"> </div>
                </div>
            }
        }
        
        
    </div>

</div>
