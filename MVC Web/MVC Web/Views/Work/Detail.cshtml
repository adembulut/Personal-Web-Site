@model MVC_Web.Models.Work
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/_LayoutPage.cshtml";
}

<style type="text/css">
    .dkadem_work_detail_p{
        text-align:center;
        margin:10px;
        
    }
    .dkadem_work_detail_p p{
        font-size:20px;
    }
</style>
<div class="tab-4 resp-tab-content" aria-labelledby="tab_item-4">
    <div class="agile_about">
        <div class="agile_about_pos">
            <img src="~/Content/images/1.png" alt=" " class="img-responsive" />
        </div>
    </div>
    <div class="agileits_agile_about">
        <h3>@Model.Header</h3>
        <br />
        
        <center>
            <div class="agile_about_blog_right_grid_list">
                <ul>
                    <li><span class="glyphicon glyphicon-user" aria-hidden="true"></span><a href="#">@Model.User.NameSurname</a></li>
                    <li><span class="glyphicon glyphicon-edit"></span><a href="#">@Model.AddedDate.Value.ToLongDateString() @Model.AddedDate.Value.ToShortTimeString()</a></li>
                </ul>
            </div><br />
        <img src="@Model.ImagePath" class="img-responsive" /></center>

        
        <div class="dkadem_work_detail_p">
            <p>
                @Model.Content
            </p>
        </div>
       


           
       


    </div>

</div>