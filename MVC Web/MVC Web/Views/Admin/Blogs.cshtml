@model List<MVC_Web.Models.Article>
@{
    ViewBag.Title = "Blogs";
    Layout = "~/Views/_LayoutAdmin.cshtml";
}
<div class="container">
    <h3 style="text-align:center;">Blogs</h3>
    <a class="btn btn-success" href="@Url.Content("/Admin/BlogAdd")">New Article</a>
    <div class="row" style="margin-top:5px;">
        <table class="table">
            <thead class="thead-inverse">
                <tr>
                    <th>#</th>
                    <th>Category</th>
                    <th>Header</th>
                    <th>Date</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    foreach (MVC_Web.Models.Article item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Category.Name</td>
                            <td>@item.Header</td>
                            <td>@item.AddedDate.Value.ToShortDateString()</td>
                            <td>
                                <a href="@Url.Content("/Admin/BlogEdit/"+item.Id)">Edit </a> |
                                <a href="@Url.Content("/Admin/BlogDetail/"+item.Id)">Detail</a> |
                                <a href="@Url.Content("/Admin/BlogRemove/"+item.Id)">Delete </a>
                            </td>
                        </tr>
                    }
                }
                

            </tbody>
        </table>
    </div>
</div>

