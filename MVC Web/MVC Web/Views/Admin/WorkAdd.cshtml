
@{
    ViewBag.Title = "WorkAdd";
    Layout = "~/Views/_LayoutAdmin.cshtml";
}
<div class="container">
    <div class="row">
        <h2>New Work</h2>
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <span>Header</span>
                <input class="form-control" id="Header" name="Header" maxlength="48" required />
            </div>
            <div class="form-group">
                <span>Content</span> 
                <textarea class="form-control" rows="5" id="Content" name="Content" required></textarea>
            </div>
            <div class="form-group">
                <span>Image</span>
                <input class="form-control" type="file" accept="image/x-png,image/gif,image/jpeg" required id="foto" name="foto"/>
            </div>
            <div class="form-group">
                <button type="submit" value="Add Work">Add Work</button>
            </div>
        </form>
    </div>
</div>

