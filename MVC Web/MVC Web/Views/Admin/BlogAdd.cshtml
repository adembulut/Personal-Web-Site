@model List<MVC_Web.Models.Category>
@{
    ViewBag.Title = "BlogAdd";
    Layout = "~/Views/_LayoutAdmin.cshtml";
}


<style>
    form{
        padding:10px;
    }
</style>
<div class="container">
    <div class="row">
            <form  method="post"enctype="multipart/form-data">
                <div class="form-group">
                    <label>Article Image:</label>
                    <input class="form-control" placeholder="Select Image" type="file" accept="image/x-png,image/gif,image/jpeg" id="foto" name="foto" required />
                </div>
                <div class="form-group">
                    <label>Article Header:</label>
                    <input type="text" required id="Header" name="Header" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Category:</label>
                    <select id="CategoryID" name="CategoryID" class="form-control" required>
                        @if (Model.Count > 0)
                        {
                            foreach (MVC_Web.Models.Category item in Model)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>Content:</label>
                    <textarea class="form-control" required id="Content" name="Content" rows="10"></textarea>
                </div>
                <div class="form-group">
                    <a href="@Url.Content("/Admin/Blogs")" class="btn btn-primary">Back</a>
                    <button class="btn btn-primary" type="submit" id="Save">Save</button>
                </div>
            </form>
            <p id="ContentPreview"></p>
        </div>

</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#Content').keyup(function () {
            $('#ContentPreview').html($(this).val());
        });
    });
</script>
