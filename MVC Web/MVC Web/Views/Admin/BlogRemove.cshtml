@model MVC_Web.Models.Article
@{
    ViewBag.Title = "BlogRemove";
    Layout = "~/Views/_LayoutAdmin.cshtml";
}

<div class="container">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Header</label>
            <div class="col-sm-10">
                <p>@Model.Header</p>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Content</label>
            <div class="col-sm-10">
                <p>@Model.Content</p>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Image</label>
            <div class="col-sm-10">
                <img src="@Url.Content(Model.ImagePath)" class="img-responsive" />
            </div>
        </div>
                <form method="post" action="/Admin/BlogRemove">
                    <input hidden id="Id" name="Id" value="@Model.Id" />
                    <a data-role="button" href="@Url.Content("/Admin/Blogs")" class="btn btn-primary">Back</a>

                    <button class="btn  btn-success" type="submit" value="Delete">Delete</button>
                </form>
                
           

</div>



